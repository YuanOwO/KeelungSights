<configuration>
    <!-- Console 輸出 -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>
                %d{MM/dd HH:mm:ssXXX} %highlight(%-5level) [${PID:-}][%15.15t] %cyan(%-30.30logger{29}) : %msg%n
            </pattern>
        </encoder>
    </appender>

    <!-- Root logger 設定 -->
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
